int fact(int n)
{
	if(n<=1)
	{
		return 1;
	}
	else
	{
		return n * fact(n - 1);
	}
}


int main() {
	cout << "!!!Hello 01_AlgorithmThought!!!" << endl; // prints !!!Hello 01_AlgorithmThought!!!
	count<<fact(9)<<endl;
	return 0;
}
